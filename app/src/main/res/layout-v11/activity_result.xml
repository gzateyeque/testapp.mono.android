<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.eyeque.mono.ResultActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/resultScrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLayoutBase"
            android:fitsSystemWindows="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/resultUpView"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#000000"
                android:height="320dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop = "10sp"
                android:text="@string/resultTitleTextString"
                android:id="@+id/resultTitleTextView"
                android:layout_below="@+id/resultUpView"
                android:textColor="#3F51B5"
                android:textSize="25sp"/>

            <TableLayout
                android:id="@+id/resultTableLayout"
                android:layout_below="@+id/resultTitleTextView"
                android:layout_marginTop = "15sp"
                android:stretchColumns="*"
                android:background="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="85dp" >

                <TableRow
                    android:id="@+id/tableHeaderRow"
                    android:layout_width="0dp"
                    android:paddingTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/sphTextView"
                        android:text="Spherical"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_column="1"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/cylTextView"
                        android:text="Cylindrical"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/axisTextView"
                        android:text="Axis"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableOdRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/odTitleTextView"
                        android:text="O.D."
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/odSphTextView"
                        android:text="-2.25"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/odCylTextView"
                        android:text="-0.5"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/odAxisTextView"
                        android:text="30"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </TableRow>


                <TableRow
                    android:id="@+id/tableOsRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/osTitleTextView"
                        android:text="O.S."
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/osSphTextView"
                        android:text="-2.75"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/osCylTextView"
                        android:text="-0.5"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/osAxisTextView"
                        android:text="50"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measurement"
                android:id="@+id/measurementTextView"
                android:layout_below="@+id/resultTableLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="#3F51B5"
                android:textSize="20sp" />

            <TableLayout
                android:id="@+id/measurementTableLayout"
                android:layout_below="@+id/measurementTextView"
                android:layout_marginTop = "15sp"
                android:stretchColumns="*"
                android:background="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp" >

                <TableRow
                    android:id="@+id/measurementTableHeaderRow"
                    android:layout_width="0dp"
                    android:paddingTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/measurementLeftEyeTextView"
                        android:text="Left Eye"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/measurementRightEyeTextView"
                        android:text="Right Eye"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/line1TableRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/l1TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/r1TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/line2TableRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/l2TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/r2TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/line3TableRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/l3TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/r3TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/line4tableRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/l4TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/r4TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/line5TableRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/l5TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/r5TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>

                <TableRow
                    android:id="@+id/line6TableRow"
                    android:layout_width="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/l6TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/r6TextView"
                        android:text="-0.04 45&#176;"
                        android:gravity="center"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uploadButton"
        android:text="@string/uploadButtonTextString"
        android:textAllCaps="false"
        android:background="@drawable/myroundbutton"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingLeft="40sp"
        android:paddingRight="40sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>